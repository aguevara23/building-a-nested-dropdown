<div class="m-4">
  <DropdownList class='list-reset flex' as |List|>
    <List.item class='relative p-4 bg-grey-light hover:bg-yellow cursor-pointer' as |Item|>
      Menu A

      {{#if Item.isActive}}
        <Item.sublist class='list-reset absolute pin-l mt-4 bg-white shadow' as |List|>
          <List.item class='p-4' as |Item|>
            Submenu A 1 {{if Item.isActive '(active)'}}
          </List.item>
          <List.item class='p-4'>
            Submenu A 2
          </List.item>
        </Item.sublist>
      {{/if}}
    </List.item>

    <List.item class='relative p-4 bg-grey-light hover:bg-yellow cursor-pointer' as |Item|>
      Menu B {{if Item.isActive '(active)'}}
    </List.item>
  </DropdownList>
</div>
