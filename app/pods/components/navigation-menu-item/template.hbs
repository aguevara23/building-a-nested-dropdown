<@List.item as |Item|>
  <li class='
    w-64 p-4 cursor-pointer
    {{if Item.isActive 'bg-blue text-white' 'bg-grey-light'}}
  '>
    {{yield (hash
      submenu=(component 'navigation-submenu'
        Item=Item
        tetherTarget=(concat '#' elementId)
        attachment='top left'
        targetAttachment='bottom left'
      )
    )}}
  </li>
</@List.item>
